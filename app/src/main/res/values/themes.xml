<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyAndroidProject" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_grey</item>
        <item name="colorPrimaryVariant">@color/light_grey</item>
        <item name="colorOnPrimary">@color/orange</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="21">@color/light_grey</item>
        <!-- Customize your theme here. -->
        <item name="actionMenuTextColor">@color/orange</item>
        <item name="android:windowLightStatusBar"  tools:targetApi="23">true</item>
        <item name="colorControlNormal">@color/orange</item>
        <item name="android:homeAsUpIndicator">@drawable/back_icon</item>
    </style>

</resources>